{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Base Options */
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],

    /* Strictness and Quality */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,

    /* Module Resolution */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Project References */
    "composite": true,
    "incremental": true,

    /* Path Mappings for Direct Imports */
    "baseUrl": ".",
    "paths": {
      "@mini-wallet/types": ["packages/types/src"],
      "@mini-wallet/types/*": ["packages/types/src/*"],
      "@mini-wallet/api": ["packages/api/src"],
      "@mini-wallet/api/*": ["packages/api/src/*"],
      "@mini-wallet/hooks": ["packages/hooks/src"],
      "@mini-wallet/hooks/*": ["packages/hooks/src/*"],
      "@mini-wallet/store": ["packages/store/src"],
      "@mini-wallet/store/*": ["packages/store/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist", "**/.turbo"],
  "display": "Base Configuration"
}
